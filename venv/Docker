# Base image for Python environment with Streamlit
FROM python:3.9-slim

WORKDIR /app

# Copy requirements file
COPY requirements.txt ./

# Install dependencies
RUN pip install -r requirements.txt

# Copy Streamlit app and other Python code
COPY . .

# Expose port for Streamlit app
EXPOSE 8080

# Run the Streamlit app
CMD ["streamlit", "run", "main.py"]  # Replace "main.py" with your app file
